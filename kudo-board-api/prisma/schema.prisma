generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model boards {
    id       Int      @id @default(autoincrement())
    title    String
    category String
    author   String
    cards    cards[]
  }

model cards {
  card_id   Int     @id @default(autoincrement())
  board_id  Int?
  title     String  
  description  String  
  image     String
  upvote    Int
  owner     String
  boards   boards?   @relation(fields: [board_id], references: [id], onDelete: Cascade)
}
